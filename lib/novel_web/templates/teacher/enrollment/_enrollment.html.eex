<li class="list-group-item">
  <div class="d-flex align-items-center justify-content-between">
    <%= link to: teacher_course_enrollment_path(@conn, :show, @course, @enrollment) do %>
      <span><%= full_name(@enrollment.user) %></span>
    <% end %>

    <%= @enrollment.group && @enrollment.group.name %>

    <%= format_results Enum.map(@enrollment.assignment_results, &(&1.is_passed)) %>

    <%= format_results Enum.map(@enrollment.exam_results, &(&1.is_passed)) %>

    <%= render "_actions.html", assigns %>
  </div>
</li>



