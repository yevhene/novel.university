<h2>
  <%= @course.name %>
</h2>

<p><%= @course.description %></p>

<div class="d-flex align-items-center justify-content-between">
  <%= link "Edit", to: teacher_course_path(@conn, :edit, @course), class: "btn btn-primary" %>

  <%= link "Delete", to: teacher_course_path(@conn, :delete, @course), method: "delete", class: "btn btn-danger", data: [confirm: "Really?"] %>
</div>

<span><%= link "Back", to: course_path(@conn, :show, @course) %></span>
