<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :description, class: "control-label" %>
    <%= textarea f, :description, class: "form-control" %>
    <%= error_tag f, :description %>
  </div>

  <div class="form-group">
    <%= label f, :started_at, class: "control-label" %>
    <%= date_select f, :started_at, class: "form-control" %>
    <%= error_tag f, :started_at %>
  </div>

  <div class="form-group d-flex align-items-center justify-content-between">
    <%= submit "Submit", class: "btn btn-primary" %>

    <%= if @conn.assigns[:course] do %>
      <%= link "Delete", to: course_path(@conn, :delete, @course), method: "delete", class: "btn btn-danger", data: [confirm: "Really?"] %>
    <% end %>
  </div>
<% end %>
