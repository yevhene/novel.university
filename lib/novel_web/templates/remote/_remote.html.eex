<div class="card">
  <div class="card-body">
    <h4 class="card-title">
      <%= @remote.name %>
      <a href="<%= @remote.url %>"><i class="fa fa-github" aria-hidden="true"></i></a>
    </h4>
    <p class="card-text"><%= @remote.description %></p>
  </div>
  <div class="card-footer d-flex justify-content-center">
    <button class="btn btn-primary" js-submit-remote="<%= @remote.owner %>/<%= @remote.name %>">
      <%= gettext("Submit") %>
    </button>
  </div>
</div>
